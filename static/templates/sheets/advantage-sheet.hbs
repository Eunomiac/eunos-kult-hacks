<form class="{{cssClass}}" autocomplete="off">
  <header class="sheet-header">
    <img src="{{item.img}}" data-edit="img" title="{{item.name}}" height="64" width="64" />
    <h1><input name="name" type="text" value="{{item.name}}" placeholder="Name" /></h1>
  </header>
  <div class="forms kult-item-sheet">

    {{#if hasAttributePrompt}}
    <div>
      <label>{{localize "k4lt.AttributePrompt"}}:</label>
      <select name="system.attributemod">
        {{selectOptions attributeValues selected=system.attributemod valueAttr="value" labelAttr="label"}}
      </select>
    </div>
    {{/if}}

    <div>
      <label>{{localize "k4lt.Type"}}:</label>
      <select name="system.type">
        {{selectOptions typeValues selected=system.type valueAttr="value" labelAttr="label"}}
      </select>
    </div>

    <div class="tokens-container">
      {{#if canHaveHold}}
      <label>Grants Hold?</label>
      <input type="checkbox" name="system.hasHold" {{checked system.hasHold}} />
      {{#if system.hasHold}}
      <label>{{localize "k4lt.Counter"}}:</label>
      <input class="tokens-counter" name="system.holdTokens" value="{{system.holdTokens}}" class="short-input"
        type="number" />
      {{/if}}
      {{/if}}
      {{#if canHaveEdges}}
      <label>Has Edges?</label>
      <input type="checkbox" name="system.hasTokens" {{checked system.hasTokens}} />
      {{#if system.hasTokens}}
      <label>{{localize "k4lt.Counter"}}:</label>
      <input class="tokens-counter" name="system.tokens" value="{{system.tokens}}" class="short-input" type="number" />
      {{/if}}
      {{/if}}
    </div>

    {{#if hasTrigger}}
    <div class="editor-row">
      <label>{{localize "k4lt.Trigger"}}:</label>
      <div>{{editor system.trigger target="system.trigger" button=true owner=owner editable=editable}}</div>
    </div>
    {{/if}}

    {{#if hasEffect}}
    <div class="editor-row">
      <label>{{localize "k4lt.Effect"}}:</label>
      <div>{{editor system.effect target="system.effect" button=true owner=owner editable=editable}}</div>
    </div>
    {{/if}}

    {{#if hasOptions}}
    <div class="editor-row">
      <label>{{localize "k4lt.Options"}}:</label>
      <div>{{editor system.options target="system.options" button=true owner=owner editable=editable}}</div>
    </div>
    {{#unless (eq system.options "")}}
    <div class="flex-row">
      <label>Show Options For:</label>
      <span class="labelled-checkbox">
        <label>Success</label>
        <input type="checkbox" name="system.showOptionsFor.success" {{checked system.showOptionsFor.success}} />
      </span>
      <span class="labelled-checkbox">
        <label>Partial</label>
        <input type="checkbox" name="system.showOptionsFor.partial" {{checked system.showOptionsFor.partial}} />
      </span>
      <span class="labelled-checkbox">
        <label>Failure</label>
        <input type="checkbox" name="system.showOptionsFor.failure" {{checked system.showOptionsFor.failure}} />
      </span>
    </div>
    {{/unless}}
    {{/if}}

    {{#if hasRollResults}}
    <div>
      <label>{{localize "k4lt.Results"}}:</label>
      <div class="results-input">
        <div class="editor-row">
          <label>15+:</label>
          <div>{{editor system.completesuccess target="system.completesuccess" button=true owner=owner
            editable=editable}}</div>
        </div>
        <div class="editor-row">
          <label>10-14:</label>
          <div>{{editor system.partialsuccess target="system.partialsuccess" button=true owner=owner editable=editable}}
          </div>
        </div>
        <div class="editor-row">
          <label>0-9</label>
          <div>{{editor system.failure target="system.failure" button=true owner=owner editable=editable}}</div>
        </div>
      </div>
    </div>
    {{/if}}

    {{#if hasSpecialFlag}}
    <div>
      <label>{{localize "k4lt.SpecialMove"}}:</label>
      <select name="system.specialflag">
        {{selectOptions specialMoveValues selected=system.specialflag valueAttr="value" labelAttr="label"}}
      </select>
    </div>
    {{/if}}

  </div>
</form>
