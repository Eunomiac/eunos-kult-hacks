<div class="flex-row attribute-type">
  <div>
    <label>{{localize "k4lt.Type"}}:</label>
    <select name="system.type">
      {{selectOptions typeValues selected=system.type valueAttr="value" labelAttr="label"}}
    </select>
  </div>
  {{#if hasAttributePrompt}}
  <div>
    <label>{{localize "k4lt.AttributePrompt"}}:</label>
    <select name="system.attributemod">
      {{selectOptions attributeValues selected=system.attributemod valueAttr="value" labelAttr="label"}}
    </select>
  </div>
  {{/if}}
</div>

<div class="tokens-container">
  <label>Has Counter?</label>
  <input type="checkbox" name="system.hasCounter" {{checked system.hasCounter}} />
  {{#if system.hasCounter}}
  <input class="tokens-name" name="system.counterName" value="{{system.counterName}}" class="short-input" type="text" placeholder="Name" />
  <input class="tokens-counter" name="system.counterCount" value="{{system.counterCount}}" class="short-input" type="number" />
  <select name="system.counterResetsOn">
    {{selectOptions counterResetOnValues selected=system.counterResetsOn valueAttr="value" labelAttr="label"}}
  </select>
  {{/if}}
</div>
