<div class="move-card darksecret-card">
  {{#let
    anchorName=(getUniqueID "darksecret-card-anchor")
    popoverID=(getUniqueID "darksecret-card-popover")
  }}


  <div class="item-draggable darksecret-info item-name" data-item-id="{{_id}}" popovertarget="{{popoverID}}" style="anchor-name: --{{anchorName}}">
    <a class="move-card-text item-edit" title="{{localize 'k4lt.RollMove'}}"> <img src="{{img}}" title="{{name}}" /> {{name}} </a>
    <div class="item-controls">
      <a class="item-control item-show" title="{{localize 'k4lt.ShowItem'}}"><i class="far fa-comment-alt"></i></a>
      <a class="item-control item-delete" title="{{localize 'k4lt.DeleteItem'}}"><i class="fas fa-trash"></i></a>
    </div>

  </div>
  <div id="{{popoverID}}"
    style="position-anchor: --{{anchorName}};"
    popover>
    {{{system.drive}}}
  </div>
  {{/let}}
</div>
