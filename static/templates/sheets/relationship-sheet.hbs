<form class="{{cssClass}} relationship-sheet" autocomplete="off">
  <header class="sheet-header">
    <img src="{{item.img}}" data-edit="img" title="{{item.name}}" height="64" width="64" />
    <h1><input name="name" type="text" value="{{item.name}}" placeholder="Name" /></h1>
  </header>
    <div class="kult-item-sheet">
    <div class="editor-row">
      <label>{{localize "k4lt.Description"}}:</label>
      <div>{{editor system.description target="system.description" button=true owner=owner editable=editable}}</div>
    </div>
    <div>
      <label>Subtitle:</label>
      <input name="system.subtitle" type="text" value="{{system.subtitle}}" />
    </div>
  </div>
  <div class="kult-item-sheet kult-item-flex">
    <div>
      <label>{{localize "k4lt.Target"}}:</label>
      <input name="system.target" type="text" value="{{system.target}}" />
    </div>
    <div>
      <label>{{localize "k4lt.Strength"}}:</label>
      <input name="system.strength" type="text" value="{{system.strength}}" data-dtype="Number" />
    </div>
  </div>
</form>
