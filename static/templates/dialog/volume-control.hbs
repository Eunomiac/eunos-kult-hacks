<form class="volume-control-form">
  {{#each sounds}}
    <div class="volume-control-row">
      <div class="volume-header">
        <label>{{displayName}}</label>
        <span class="volume-value">{{round volume 2}}</span>
      </div>
      <input type="range"
             class="volume-slider"
             data-sound="{{name}}"
             value="{{volume}}"
             min="0"
             max="1"
             step="0.01">
    </div>
  {{/each}}
</form>
