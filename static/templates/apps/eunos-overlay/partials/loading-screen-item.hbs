<div class="loading-screen-item item-home-{{case "lower" data.home}}" data-key="{{key}}">
  <div class="loading-screen-item-image">
    <img src="{{data.image}}" alt="{{data.title}}">
  </div>
  <div class="loading-screen-item-title">
    <span>{{data.prefix}}</span>
    <span><strong>{{data.title}}</strong></span>
  </div>
  <div class="loading-screen-item-subtitle">
    {{data.subtitle}}
  </div>
  <div class="loading-screen-item-home">
    <span>Native to</span>
    <span><strong>{{data.home}}</strong></span>
  </div>
  <div class="loading-screen-item-body">
    {{{data.body}}}
  </div>
  {{#if data.rightSideImageURL}}
    <div class="loading-screen-item-right-side-image">
      <img src="{{data.rightSideImageURL}}" alt="{{data.title}}">
    </div>
  {{/if}}
</div>
