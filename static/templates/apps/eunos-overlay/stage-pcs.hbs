<div id="PCS" class="pcs-container">
  {{log "PCS CONTAINER" this}}
  {{#each locationData.pcData }}
  <div
    class="pc-container {{#if isHidden}}pc-container-hidden{{/if}} {{#if isDimmed}}pc-container-dimmed{{/if}} {{#if isMasked}}pc-container-masked{{/if}} {{#if isSpotlit}}pc-container-spotlit{{/if}}"
    data-pc-id="{{actorID}}" data-slot="{{slot}}">
    <div class="chain" style="background-image: url({{{../chainBG}}});"></div>
    <div class="pc-portrait-container-wrapper">
      <div class="pc-portrait-container {{#if isOwner}}pc-portrait-container-owner{{/if}}">
        {{#if actor}}
        <img class="pc-portrait-frame" src="/modules/eunos-kult-hacks/assets/images/stage/pc-frame.webp" />
        <div class="pc-portrait-container-wrapper-inner">
        <img class="pc-portrait" src="{{actor.img}}" data-action="pcPortraitClick" />
        </div>
        {{/if}}
        {{#if (eq ../sessionScribeID actorID)}}
        <div class="session-scribe-indicator">
          <i class="fas fa-quill"></i>
        </div>
        {{/if}}
        {{#if (eq ../dramaticHookCandleID actorID)}}
        <div class="dramatic-hook-candle-indicator">
          <i class="fas fa-candle"></i>
        </div>
        {{/if}}
      </div>
    </div>
  </div>
  <div class="pc-spotlight-container {{#if isSpotlit}}pc-spotlight-container-spotlit{{/if}}">
    <img class="pc-spotlight" src="/modules/eunos-kult-hacks/assets/images/stage/spotlight.webp" />
  </div>
{{/each}}
</div>
